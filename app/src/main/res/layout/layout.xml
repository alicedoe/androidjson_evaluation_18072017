<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackgroundLight">

    <Spinner
        android:id="@+id/la_spinner_promo"
        android:spinnerMode="dropdown"
        android:prompt="@string/prompt_promotion"
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="72dp"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/la_spinner_session"
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:spinnerMode="dialog"
        android:prompt="@string/session"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/la_spinner_promo"
        app:layout_constraintRight_toLeftOf="@+id/la_spinner_skills"
        tools:layout_editor_absoluteY="72dp"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/la_spinner_skills"
        android:layout_width="115dp"
        android:layout_height="1dp"
        android:spinnerMode="dialog"
        android:prompt="@string/skills"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="72dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/la_filtre_promotion_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_promo_label"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/la_filtre_ville_label"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="81dp" />

    <TextView
        android:id="@+id/la_filtre_ville_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_town_label"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="52dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/la_filtre_skill_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_skill_label"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/la_filtre_promotion_label"/>

    <TextView
        android:id="@+id/la_filtre_promotion_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:text="@string/filter_promo_label"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/la_filtre_promotion_label"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_liste_apprenant"
        app:layout_constraintVertical_bias="0.333"
        app:layout_constraintRight_toLeftOf="@+id/la_filtre_skill_value"
        app:layout_constraintLeft_toRightOf="@+id/la_filtre_ville_value"
        app:layout_constraintHorizontal_bias="0.548" />

    <TextView
        android:id="@+id/la_filtre_ville_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_town_label"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/la_filtre_ville_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_liste_apprenant"
        app:layout_constraintVertical_bias="0.333"
        android:layout_marginLeft="52dp" />

    <TextView
        android:id="@+id/la_filtre_skill_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_skill_label"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/la_filtre_skill_label"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_liste_apprenant"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.333"
        android:layout_marginRight="66dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_liste_apprenant"
        android:layout_width="368dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/la_spinner_session"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>