<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="180dp"
                android:layout_height="1px"
                android:layout_marginTop="50dp"
                android:background="@android:color/darker_gray"
                android:layout_alignLeft="@+id/laItem_textview_nom"/>

            <ImageButton
                android:id="@+id/laItem_imagebutton_detail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/laItem_textview_nom"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/laItem_imagebutton_detail"
                android:layout_toRightOf="@+id/laItem_imagebutton_detail"
                android:text="Nom"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/laItem_textview_prenom"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignBaseline="@+id/laItem_textview_nom"
                android:layout_alignBottom="@+id/laItem_textview_nom"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_toEndOf="@+id/laItem_textview_nom"
                android:layout_toRightOf="@+id/laItem_textview_nom"
                android:text="Prenom"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/laItem_textview_ville"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/laItem_imagebutton_detail"
                android:layout_marginBottom="20dp"
                android:text="Ville"
                android:textColor="@android:color/darker_gray"
                android:layout_alignLeft="@+id/laItem_textview_nom"
                android:layout_alignStart="@+id/laItem_textview_nom" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>