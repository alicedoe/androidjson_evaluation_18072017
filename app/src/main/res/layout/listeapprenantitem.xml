<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E74C3C">

            <ImageButton
                android:id="@+id/laItem_imagebutton_detail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ano"
                app:srcCompat="@android:drawable/ic_menu_view" />

            <TextView
                android:id="@+id/laItem_textview_nom_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/laItem_imagebutton_detail"
                android:layout_toRightOf="@+id/laItem_imagebutton_detail"
                android:text="Nom : "
                android:textColor="@color/da_ratingBarFullText" />

            <TextView
                android:id="@+id/laItem_textview_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/laItem_textview_nom_label"
                android:layout_alignBottom="@+id/laItem_textview_nom_label"
                android:layout_toEndOf="@+id/laItem_textview_nom_label"
                android:layout_toRightOf="@+id/laItem_textview_nom_label"
                android:text="Nom"
                android:textColor="@color/da_circleNomPrenom" />

            <TextView
                android:id="@+id/laItem_textview_prenom_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/laItem_textview_nom_label"
                android:layout_alignStart="@+id/laItem_textview_nom_label"
                android:layout_below="@+id/laItem_textview_nom_label"
                android:text="Prenom : "
                android:textColor="@color/da_ratingBarFullText" />

            <TextView
                android:id="@+id/laItem_textview_prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/laItem_textview_prenom_label"
                android:layout_alignBottom="@+id/laItem_textview_prenom_label"
                android:layout_toEndOf="@+id/laItem_textview_prenom_label"
                android:layout_toRightOf="@+id/laItem_textview_prenom_label"
                android:text="Prenom"
                android:textColor="@color/da_circleNomPrenom" />

            <View
                android:id="@+id/view"
                android:layout_width="180dp"
                android:layout_height="1px"
                android:layout_alignLeft="@+id/laItem_textview_nom_label"
                android:layout_marginTop="60dp"
                android:background="@color/da_ratingBarFullText" />


            <TextView
                android:id="@+id/laItem_textview_ville"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/laItem_textview_ville_label"
                android:layout_toRightOf="@+id/laItem_textview_ville_label"
                android:text="Ville"
                android:textColor="@color/da_circleNomPrenom" />

            <TextView
                android:id="@+id/laItem_textview_ville_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville : "
                android:textColor="@color/da_ratingBarFullText"
                android:layout_alignBaseline="@+id/laItem_textview_ville"
                android:layout_alignBottom="@+id/laItem_textview_ville"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>