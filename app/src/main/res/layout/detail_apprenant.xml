<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/da_ratingBarFullText"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/da_ratingBarFullText"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/beweb_1890_blanc_transp" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/da_blocHaut"
            android:elevation="4dp" >

            <ImageButton
                android:id="@+id/da_imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:elevation="5dp"
                android:padding="10dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/da_textview_prenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/da_imageView"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:textColor="@color/da_circleNomPrenom"
                android:text="Prenom"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/da_textview_nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/da_imageView"
                android:layout_marginLeft="30dp"
                android:layout_alignParentStart="true"
                android:layout_toRightOf="@id/da_textview_prenom"
                android:textColor="@color/da_circleNomPrenom"
                android:text="Nom"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/da_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/da_textview_nom"
                android:layout_marginTop="20dp"
                android:isIndicator="true"
                android:progressTint="@color/da_bleu4" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:background="@color/da_ratingBarFullText"
            android:orientation="vertical">

            <TextView
                android:id="@+id/da_textview_ville"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/da_ratingBarFullText"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Ville" />

            <TextView
                android:id="@+id/da_textview_promo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/da_ratingBarFullText"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/da_textview_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/da_ratingBarFullText"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:elevation="4dp"
                android:padding="10dp"
                android:text="Description" />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>

